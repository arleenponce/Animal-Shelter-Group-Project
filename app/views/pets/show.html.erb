<link href='https://fonts.googleapis.com/css?family=Poiret+One' rel='stylesheet' type='text/css'>

<p id="notice"><%= notice %></p>
<div class="container col-md-12">
<h1 class="profile"><%= @pet.name %></h1>
</div>

<div class="container col-md-12">
  <div class="container col-md-6">
    <div class="pic_container">
      <div class="img_container">
        <% if @pet.pet_images.first.nil? %>
          <%= image_tag "comingsoon.jpg" %>
        <% end %>

        <%= image_tag(@pet.pet_images.first.photo.url(:large), id: "main_img") %>

        </br>

        <div class="imgthumbs">
          <% @pet.pet_images.each do |pet_image| %>
            <%= link_to image_tag(pet_image.photo.url(:thumb)), "#{pet_image.photo.url(:large)}", onClick: onclick="swap(this); return false;" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  </br>

  <div class="container col-md-6">
    <div class="text_container">
        <p class="profile">
          <strong>Animal Type:</strong>
          <%= @pet.species %>
        </p>

        <p class="profile">
          <strong>Gender:</strong>
          <%= @pet.gender %>
        </p>

        <p class="profile">
          <strong>Age:</strong>
          <%= @pet.age %>
        </p>

        <p class="profile">
          <strong>Weight:</strong>
          <%= @pet.weight %> lbs
        </p>

        <p class="profile"><strong>Breed(s):</strong>
          <% if !@pet.breeds.empty? %>
              <% @pet.breeds.each do |b| %>
                <%= b.breed_name %>
              <% end %>
            <% else %>
              <%= "No breed known" %>
            <% end %></p>

        <p class="profile">
          <strong>Description:</strong>
          <%= @pet.description %>
        </p>
    </div>
  </div>
</div>


<a class="profile" href="/pets/all">Back</a>

<script type="text/javascript">
  function swap(image) {
    document.getElementById("main_img").src = image.href
  }
</script>
