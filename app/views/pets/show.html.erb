<link rel="stylesheet" type="text/css" href="form.css">

<body class="profileBG">

<p id="notice"><%= notice %></p>

<p class="profile">
  <strong>Name:</strong>
  <%= @pet.name %>
</p>

<% if @pet.pet_images.first.nil? %>
  <%= image_tag "comingsoon.jpg" %>
<% end %>

<% @pet.pet_images.each do |pet_image| %>
  <%= image_tag(pet_image.photo.url(:medium)) %>
<% end %>


<p class="profile">
  <strong>Species:</strong>
  <%= @pet.species %>
</p>

<p class="profile">
  <strong>Gender:</strong>
  <%= @pet.gender %>
</p>

<p class="profile">
  <strong>Age:</strong>
  <%= @pet.age %>
</p>

<p class="profile">
  <strong>Weight:</strong>
  <%= @pet.weight %>
</p>
<p><strong>Breed:</strong>
  <% if !@pet.breeds.empty? %>
      <% @pet.breeds.each do |b| %>
        <%= b.breed_name %>
      <% end %>
      <% else %>
      <%= "No breed known" %>
    <% end %></p>

<p class="profile">
  <strong>Description:</strong>
  <%= @pet.description %>
</p>

<a href="/pets/all">Back</a>

</body>
