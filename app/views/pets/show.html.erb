<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @pet.name %>
</p>

<p>
  <strong>Species:</strong>
  <%= @pet.species %>
</p>

<p>
  <strong>Gender:</strong>
  <%= @pet.gender %>
</p>

<p>
  <strong>Age:</strong>
  <%= @pet.age %>
</p>

<p>
  <strong>Weight:</strong>
  <%= @pet.weight %>
</p>
<p><strong>Breed:</strong> 
  <% if !@pet.breeds.empty? %>
      <% @pet.breeds.each do |b| %>
        <%= b.breed_name %>
      <% end %>
      <% else %>
      <%= "No breed known" %>
    <% end %></p>

<%= link_to 'Edit', edit_pet_path(@pet) %> |
