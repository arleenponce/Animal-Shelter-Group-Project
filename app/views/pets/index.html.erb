<p id="notice"><%= notice %></p>

<h1>Listing Pets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Photo</th>
      <th>Species</th>
      <th>Gender</th>
      <th>Age</th>
      <th>Weight</th>
      <th>Breed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <% if pet.pet_images.first.nil? %>
          <td>No Image uploaded</td>
          <% else %>
            <td><%= image_tag(pet.pet_images.first.photo.url(:thumb)) %></td>
        <% end %>
        <td><%= pet.species %></td>
        <td><%= pet.gender %></td>
        <td><%= pet.age %></td>
        <td><%= pet.weight %></td>
        <td><%= pet.breed %></td>
        <td><%= link_to 'Show', pet %></td>
        <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

