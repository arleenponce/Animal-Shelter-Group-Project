
<link href='https://fonts.googleapis.com/css?family=Poiret+One' rel='stylesheet' type='text/css'>
<link href='https://fonts.googleapis.com/css?family=Lobster' rel='stylesheet' type='text/css'>


<a href="pets/search_pets">Search for your perfect pet</a>
  <p id="notice"><%= notice %></p>
  <%= render 'login' %>

<h1 id="petlist">Meet our furry friends!</h1>

<div class="outer">
  <% @pets.each_slice(3) do |slice| %>
    <div class="petsMain">
      <% slice.each do |pet| %>
        <div class="petPrintout">
          <h3 class="petName"><%= link_to pet.name , pet %></h3>
          <% if pet.pet_images.first.nil? %>
            <p>No Image uploaded</p>
          <% else %>
            <%= image_tag(pet.pet_images.first.photo.url(:thumb)) %>
          <% end %>

          <p><br><%= pet.species %>,
            <%= pet.gender %>,
            age <%= pet.age %>,
            <%= pet.weight %> lbs</p>

          <p><% if !pet.breeds.empty? %>
            <% pet.breeds.each do |b| %>
              <%= b.breed_name %>
            <% end %>
            <% else %>
              <%= "No breed known" %>
          <% end %></p>
          <p><%= link_to 'Show', pet %> | <%= link_to 'Edit', edit_pet_path(pet) %></p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
<br>

<%= link_to 'New Pet', new_pet_path %> |
<%= link_to 'Admin Panel', admin_path %>


</body>
